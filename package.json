{
  "name": "modelo-react",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "tailwind": "tailwindcss -i ./src/themes/tailwind-config.css -o ./dist/tailwind-config-output.css --watch",
    "build": "tsc -b && vite build && tailwindcss -i ./src/themes/tailwind-config.css -o ./dist/tailwind-config-output.css && biome check .",
    "prepare": "husky",
    "lint": "biome lint .",
    "preview": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dario-bastos-dev/modelo-react.git"
  },
  "keywords": [],
  "author": "DÃ¡rio Bastos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dario-bastos-dev/modelo-react/issues"
  },
  "dependencies": {
    "-": "^0.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "styled-components": "^6.1.14"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "vite": "^6.0.5"
  },
  "lint-staged": {
    "**.{tsx, d.tsx}": [
      "biome check --files-ignore-unknown=true",
      "biome check --write --no-errors-on-unmatched",
      "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched",
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched"
    ]
  }
}
